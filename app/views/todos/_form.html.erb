<div class="row" >

  <div class="col-md-offset-2 col-md-4">
    <h1>Agregar ToDo</h1>
      <%= form_with model: @todo, local: true do |f| %>
          <!-- Es el titulo de title -->
        <%= f.label :description, "Descripcion" %>
        <!-- Escribo la info -->
        <%= f.text_area :description %>
        <!-- Es el titulo de content -->
        <%= f.label :completed, "Si" %>
        <!-- Escribo la info -->
        <%= f.check_box :completed %>
        <!-- Coloca el boton -->
        <%= f.submit  "Enviar" %>
    </div>
</div>

<% end %>
